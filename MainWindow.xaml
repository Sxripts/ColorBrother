<Window
    x:Class="ColorBrother.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Width="450"
    Height="550"
    AllowsTransparency="True"
    Background="Transparent"
    WindowStyle="None">

    <Border Background="#FF081D2F" CornerRadius="15">
        <Grid>
            <Button
                Width="100"
                Height="30"
                Margin="20,20,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Click="OnToggleCrosshair"
                Content="Toggle FOV"
                FontSize="15" />
        </Grid>
    </Border>
</Window>